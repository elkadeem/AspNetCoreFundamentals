@page "{id:Guid}"
@model AspNetCore.Fundamentals.WebApp.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>
<form action="" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row mb20">
        <div class="col-md-12">
            <div class="title-heading">@ViewData["Title"]</div>
            <div>
                <partial name="_EmployeeInfo" for="Employee"/>
                <div class="row">
                    <div class="col-md-12 text-left">
                        <input type="submit" class="btn btn-primary" value="Save" />
                        <a asp-page="Index" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
